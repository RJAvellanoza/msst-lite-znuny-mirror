<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="2.0" init="Framework">
    <Setting Name="HideAdminLinks::Enabled" Required="0" Valid="1">
        <Description Translatable="1">Enable hiding of the "Links" widget on the Admin overview.</Description>
        <Navigation>Frontend::Base::OutputFilter</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="^[01]$">1</Item>
        </Value>
    </Setting>

    <Setting Name="Frontend::Output::FilterContent###HideAdminLinks" Required="0" Valid="1">
        <Description Translatable="1">Output filter to remove the Admin "Links" widget.</Description>
        <Navigation>Frontend::Base::OutputFilter</Navigation>
        <Value>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterContent::HideAdminLinks</Item>
            </Hash>
        </Value>
    </Setting>
</otrs_config>