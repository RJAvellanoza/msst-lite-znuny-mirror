<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="2.0" init="Framework">
    
    <!-- Grant NOCAdmin group access to Admin interface -->
    <Setting Name="Frontend::Module###Admin" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the agent interface - Extended to include NOCAdmin group.</Description>
        <Navigation>Frontend::Admin::ModuleRegistration</Navigation>
        <Value>
            <Item ValueType="FrontendRegistration">
                <Hash>
                    <Item Key="GroupRo">
                        <Array>
                        </Array>
                    </Item>
                    <Item Key="Group">
                        <Array>
                            <Item>admin</Item>
                            <Item>MSIAdmin</Item>
                            <Item>NOCAdmin</Item>
                            <Item>NOCUser</Item>
                        </Array>
                    </Item>
                    <Item Key="Description" Translatable="1">Admin Area.</Item>
                    <Item Key="Title" Translatable="1">Admin</Item>
                    <Item Key="NavBarName">Admin</Item>
                </Hash>
            </Item>
        </Value>
    </Setting>
    
    <!-- Grant NOCAdmin group access to Admin navigation menu -->
    <Setting Name="Frontend::NavigationModule###Admin" Required="0" Valid="1">
        <Description Translatable="1">Main menu item registration - Extended to include NOCAdmin group.</Description>
        <Navigation>Frontend::Agent::ModuleRegistration::MainMenu</Navigation>
        <Value>
            <Hash>
                <Item Key="GroupRo">
                    <Array>
                    </Array>
                </Item>
                <Item Key="Group">
                    <Array>
                        <Item>admin</Item>
                        <Item>MSIAdmin</Item>
                        <Item>NOCAdmin</Item>
                        <Item>NOCUser</Item>
                    </Array>
                </Item>
                <Item Key="Module">Kernel::Output::HTML::NavBar::ModuleAdmin</Item>
                <Item Key="Name" Translatable="1">Admin</Item>
                <Item Key="Block">Admin</Item>
                <Item Key="Description" Translatable="1">Admin Area.</Item>
                <Item Key="IconBig"></Item>
                <Item Key="IconSmall"></Item>
                <Item Key="Prio">10000</Item>
                <Item Key="Link">Action=Admin</Item>
                <Item Key="LinkOption"></Item>
                <Item Key="NavBar">Admin</Item>
                <Item Key="Type"></Item>
                <Item Key="AccessKey">a</Item>
            </Hash>
        </Value>
    </Setting>
    
</otrs_config>