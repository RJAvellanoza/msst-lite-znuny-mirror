    <!-- Frontend Module Registration -->
    <Setting Name="Frontend::Module###AdminMSISupportRemoteAccessConfiguration" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the MSI Support Remote Access configuration admin interface.</Description>
        <Navigation>Frontend::Admin::ModuleRegistration</Navigation>
        <Value>
            <Item ValueType="FrontendRegistration">
                <Hash>
                    <Item Key="GroupRo">
                        <Array>
                        </Array>
                    </Item>
                    <Item Key="Group">
                        <Array>
                            <Item>admin</Item>
                            <Item>MSIAdmin</Item>
                            <Item>NOCAdmin</Item>
                        </Array>
                    </Item>
                    <Item Key="Description" Translatable="1">Configure MSI Support Remote Access/BeyondTrust remote support integration via Proxmox container control.</Item>
