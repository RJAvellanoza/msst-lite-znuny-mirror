<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="2.0" init="Framework">
    <Setting Name="AdminAccessControl::Enabled" Required="0" Valid="1">
        <Description Translatable="1">Enable AdminAccessControl output filter.</Description>
        <Navigation>Frontend::Base::OutputFilter</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="^[01]$">0</Item>
        </Value>
    </Setting>

    <Setting Name="AdminAccessControl::RestrictedGroups" Required="0" Valid="1">
        <Description Translatable="1">Groups for which the AdminAccessControl restrictions apply.</Description>
        <Navigation>Frontend::Base::OutputFilter</Navigation>
        <Value>
            <Array>
                <!-- Example: <Item>MSIAdmin</Item> -->
            </Array>
        </Value>
    </Setting>

    <Setting Name="AdminAccessControl::RestrictedLogins" Required="0" Valid="1">
        <Description Translatable="1">Optional list of logins for which restrictions also apply.</Description>
        <Navigation>Frontend::Base::OutputFilter</Navigation>
        <Value>
            <Array>
                <Item>msicmso</Item>
            </Array>
        </Value>
    </Setting>

    <Setting Name="AdminAccessControl::CacheTTL" Required="0" Valid="1">
        <Description Translatable="1">Cache TTL in seconds for per-user restriction evaluation.</Description>
        <Navigation>Frontend::Base::OutputFilter</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="^\d+$">900</Item>
        </Value>
    </Setting>

    <Setting Name="Frontend::Output::FilterContent###AdminAccessControl" Required="0" Valid="1">
        <Description Translatable="1">Group/config-based Admin access control filter with caching and logging.</Description>
        <Navigation>Frontend::Base::OutputFilter</Navigation>
        <Value>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterContent::AdminAccessControl</Item>
            </Hash>
        </Value>
    </Setting>
</otrs_config>