    </Setting>

    <Setting Name="OperationalKPIs::DataRetentionDays" Required="1" Valid="1">
        <Description Translatable="1">Number of days to retain in operational KPIs reports (default: 180).</Description>
        <Navigation>Core::OperationalKPIs</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="^\d+$">180</Item>
        </Value>
    </Setting>

    <Setting Name="OperationalKPIs::CacheEnabled" Required="1" Valid="1">
