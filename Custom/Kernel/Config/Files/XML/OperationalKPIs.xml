    <!-- Daemon Cron Task for Automatic Aggregation -->
    <Setting Name="Daemon::SchedulerCronTaskManager::Task###OperationalKPIsAggregation" Required="0" Valid="1">
        <Description Translatable="1">Aggregate operational KPIs data daily for reporting and dashboard display.</Description>
        <Navigation>Daemon::SchedulerCronTaskManager::Task</Navigation>
        <Value>
            <Hash>
                <Item Key="TaskName">OperationalKPIsAggregation</Item>
                <Item Key="Schedule">0 2 * * *</Item> <!-- Daily at 2:00 AM -->
                <Item Key="Module">Kernel::System::OperationalKPIs</Item>
                <Item Key="Function">AggregateAllData</Item>
                <Item Key="MaximumParallelInstances">1</Item>
                <Item Key="Params">
                    <Array>
                        <!-- No parameters needed - method determines date ranges automatically -->
                    </Array>
                </Item>
            </Hash>
        </Value>
    </Setting>

