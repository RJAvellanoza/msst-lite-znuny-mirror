<div class="DashboardMTRDSummary">
    <h3>[% Translate("MTRD Summary - Current Month") | html %]</h3>

[% RenderBlockStart("MTRDData") %]
    <div class="KPISummaryContainer">
        <div class="KPIMetric">
            <div class="MetricLabel">[% Translate("Average MTRD") | html %]</div>
            <div class="MetricValue" title="[% Data.AverageMTRDSecs | html %] seconds">
                [% Data.AverageMTRD | html %]
            </div>
        </div>
        <div class="KPIMetric">
            <div class="MetricLabel">[% Translate("Total Incidents") | html %]</div>
            <div class="MetricValue">[% Data.TotalIncidents | html %]</div>
        </div>
    </div>

    <h4>[% Translate("Breakdown by Priority") | html %]</h4>
    <table class="DataTable">
        <thead>
            <tr>
                <th>[% Translate("Priority") | html %]</th>
                <th>[% Translate("Count") | html %]</th>
                <th>[% Translate("Avg MTRD") | html %]</th>
                <th>[% Translate("%") | html %]</th>
            </tr>
        </thead>
        <tbody>
[% RenderBlockStart("PriorityBreakdown") %]
            <tr>
                <td>[% Data.Priority | html %]</td>
                <td>[% Data.Count | html %]</td>
                <td>[% Data.AverageMTRD | html %]</td>
                <td>[% Data.Percentage | html %]%</td>
            </tr>
[% RenderBlockEnd("PriorityBreakdown") %]
        </tbody>
    </table>

[% RenderBlockEnd("MTRDData") %]

[% RenderBlockStart("NoData") %]
    <p class="NoDataMessage">[% Translate("No MTRD data available for the current month.") | html %]</p>
[% RenderBlockEnd("NoData") %]
</div>

<style>
    .DashboardMTRDSummary {
        padding: 15px;
    }

    .KPISummaryContainer {
        display: flex;
        gap: 30px;
        margin-bottom: 25px;
    }

    .KPIMetric {
        flex: 1;
        padding: 15px;
        background-color: #f5f5f5;
        border-radius: 5px;
        border-left: 4px solid #4a90e2;
    }

    .MetricLabel {
        font-size: 0.9em;
        color: #666;
        margin-bottom: 8px;
    }

    .MetricValue {
        font-size: 2em;
        font-weight: bold;
        color: #333;
    }

    .DashboardMTRDSummary h3 {
        margin-top: 0;
        margin-bottom: 20px;
        color: #333;
    }

    .DashboardMTRDSummary h4 {
        margin-top: 25px;
        margin-bottom: 15px;
        color: #444;
    }

    .DataTable {
        width: 100%;
        border-collapse: collapse;
    }

    .DataTable thead {
        background-color: #f0f0f0;
    }

    .DataTable th,
    .DataTable td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    .DataTable tr:hover {
        background-color: #f9f9f9;
    }

    .NoDataMessage {
        padding: 20px;
        background-color: #fff3cd;
        border: 1px solid #ffc107;
        border-radius: 4px;
        color: #856404;
        text-align: center;
    }
</style>
