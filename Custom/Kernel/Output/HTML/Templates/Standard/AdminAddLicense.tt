[% RenderBlockStart("Overview") %]
<div class="MainBox ARIARoleMain LayoutFixedSidebar SidebarFirst">
    <h1 class="InvisibleText">[% Translate("License Management") | html %]</h1>

    [% BreadcrumbPath = [
            {
                Name => Translate('License Management'),
                Link => Env("Action"),
            },
        ]
    %]

    [% SWITCH Data.Action %]
        [% CASE 'Add' %]
            [% BreadcrumbPath.push({ Name => Translate("Add License"),}) %]
        [% CASE 'Change' %]
            [% USE EditTitle = String(Translate("Edit License")) %]
            [% BreadcrumbPath.push({ Name => EditTitle.append( ': ', Data.Name ) }) %]
    [% END %]

    [% INCLUDE "Breadcrumb.tt" Path = BreadcrumbPath %]

[% RenderBlockStart("LicenseWarning") %]
    <div class="MessageBox Warning">
        <p>
            [% IF Data.LicenseStatus == 'NotFound' %]
                <strong>[% Translate("No License Found") | html %]</strong><br/>
                [% Translate("No valid license file has been uploaded. Please upload a valid license file to continue using the system.") | html %]
            [% ELSIF Data.LicenseStatus == 'Expired' %]
                <strong>[% Translate("License Expired") | html %]</strong><br/>
                [% Translate("Your license has expired. Please upload a new valid license file to continue using the system.") | html %]
            [% ELSIF Data.LicenseStatus == 'Invalid' %]
                <strong>[% Translate("Invalid License") | html %]</strong><br/>
                [% Translate("The current license is invalid. Please upload a valid license file to continue using the system.") | html %]
            [% ELSE %]
                <strong>[% Translate("License Issue") | html %]</strong><br/>
                [% Translate("There is an issue with your license. Please upload a valid license file to continue using the system.") | html %]
            [% END %]
        </p>
    </div>
[% RenderBlockEnd("LicenseWarning") %]

    <div class="SidebarColumn">

[% RenderBlockStart("ActionList") %]
        <div class="WidgetSimple">
            <div class="Header">
                <h2>[% Translate("Actions") | html %]</h2>
            </div>
            <div class="Content">
                <ul class="ActionList">
[% RenderBlockStart("ActionOverview") %]
                    <li>
                        <a href="[% Env("Baselink") %]Action=[% Env("Action") %]" class="CallForAction Fullsize Center"><span><i class="fa fa-caret-left"></i>[% Translate("Go to overview") | html %]</span></a>
                    </li>
[% RenderBlockEnd("ActionOverview") %]
[% RenderBlockStart("ActionAdd") %]
                    <li>
                        <a class="CallForAction Fullsize Center" href="[% Env("Baselink") %]Action=[% Env("Action") %];Subaction=Add">
                            <span><i class="fa fa-plus-square"></i>[% Translate("Add License") | html %]</span>
                        </a>
                    </li>
[% RenderBlockEnd("ActionAdd") %]
                </ul>
            </div>
        </div>
[% RenderBlockEnd("ActionList") %]

